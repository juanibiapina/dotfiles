#!/usr/bin/env bash
#
# Summary: Mark a ticket as done (remove it)
#
# Usage: {cmd} <title>

set -e

source "${_DEV_ROOT}/lib/gum.sh"
source "${_DEV_ROOT}/lib/tickets.sh"

declare -A args="($_DEV_ARGS)"
title="${args[title]}"

if [ -z "$title" ]; then
  error "No title provided"
  exit 1
fi

project=$(resolve_project)
file=$(project_file "$project")

if [ ! -f "$file" ]; then
  error "No tickets file for $project"
  exit 1
fi

title=$(resolve_ticket "$file" "$title")
delete_item "$file" "$title"

success "Completed ticket: $title"
