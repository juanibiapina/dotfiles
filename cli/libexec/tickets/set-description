#!/usr/bin/env bash
#
# Summary: Set or replace the description of a ticket
#
# Usage: {cmd} <title> <description>

set -e

source "${_DEV_ROOT}/lib/gum.sh"
source "${_DEV_ROOT}/lib/tickets.sh"

declare -A args="($_DEV_ARGS)"
title="${args[title]}"
description="${args[description]}"

if [ -z "$title" ]; then
  error "No title provided"
  exit 1
fi

if [ -z "$description" ]; then
  error "No description provided"
  exit 1
fi

project=$(resolve_project)
file=$(project_file "$project")

if [ ! -f "$file" ]; then
  error "No tickets file for $project"
  exit 1
fi

title=$(resolve_ticket "$file" "$title")
set_description "$file" "$title" "$description"

success "Updated description: $title"
