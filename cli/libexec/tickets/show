#!/usr/bin/env bash
#
# Summary: Show a ticket's full details
#
# Usage: {cmd} <title>

set -e

source "${_DEV_ROOT}/lib/gum.sh"
source "${_DEV_ROOT}/lib/tickets.sh"

declare -A args="($_DEV_ARGS)"
title="${args[title]}"

if [ -z "$title" ]; then
  error "No title provided"
  exit 1
fi

project=$(resolve_project)
file=$(project_file "$project")

if [ ! -f "$file" ]; then
  error "No tickets file for $project"
  exit 1
fi

title=$(resolve_ticket "$file" "$title")
content=$(show_item "$file" "$title")

if [ -z "$content" ]; then
  error "Ticket not found: $title"
  exit 1
fi

echo "$content" | glow -
