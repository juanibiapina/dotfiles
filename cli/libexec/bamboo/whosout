#!/usr/bin/env bash
#
# Summary: Check who's out now on BambooHR
#
# Usage: {cmd}

set -e

curl \
  -u "${BAMBOO_TOKEN}:x" \
  --header "accept: application/json" \
  "https://api.bamboohr.com/api/gateway.php/${BAMBOO_SUBDOMAIN}/v1/time_off/whos_out/?start=$(date +"%Y-%m-%d")&end=$(date +"%Y-%m-%d")" | jq .
