#!/usr/bin/env bash
#
# Reset current directory for development.

set -e

git fetch --prune --tags

if git rev-parse --verify "origin/develop" &>/dev/null; then
  BRANCH="develop"
elif git rev-parse --verify "origin/main" &>/dev/null; then
  BRANCH="main"
else
  BRANCH="master"
fi

git clean -fd
git checkout $BRANCH
git clean-branches
git pull --rebase
