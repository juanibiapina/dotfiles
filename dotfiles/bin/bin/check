#!/usr/bin/env bash
#
# Sends a notification after some minutes

set -e

time="$1"
shift
message="$@"

if [ "$(uname -s)" = "Linux" ]; then
  (sleep "$((time * 60))" && notify-send "Check" "${message:-"There you go."}") &
  exit
fi

if [ "$(uname -s)" = "Darwin" ]; then
  (sleep "$((time * 60))" && terminal-notifier -message "${message:-"There you go."}" -title "Check" -sound default) &
  exit
fi
