[user]
  name = Juan Ibiapina
  email = juanibiapina@gmail.com
  signingkey = 1C474BBC910209AE
[diff]
  ignoreSubmodules = dirty
[alias]
  a = add
  b = branch
  c = diff --cached
  ci = commit
  co = checkout
  cp = cherry-pick
  d = diff
  f = fetch --prune --tags
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  la = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  prb = pull --rebase --prune --tags
  rb = rebase
  s = status
  st = stash
  sh = show
  today = ! git l --since "12am"
  unstage = reset HEAD .
[core]
  excludesfile = ~/.gitignore
  attributesFile = ~/.gitattributes
[github]
  user = juanibiapina
[heroku]
  account = personal
[push]
  default = simple
[merge]
  tool = vimdiff
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = green
  changed = yellow
  untracked = red
[pager]
  diff = delta
  show = delta
# https://raw.githubusercontent.com/folke/tokyonight.nvim/refs/heads/main/extras/delta/tokyonight_night.gitconfig
[delta]
  minus-style                   = syntax "#37222c"
  minus-non-emph-style          = syntax "#37222c"
  minus-emph-style              = syntax "#713137"
  minus-empty-line-marker-style = syntax "#37222c"
  line-numbers-minus-style      = "#914c54"
  plus-style                    = syntax "#20303b"
  plus-non-emph-style           = syntax "#20303b"
  plus-emph-style               = syntax "#2c5a66"
  plus-empty-line-marker-style  = syntax "#20303b"
  line-numbers-plus-style       = "#449dab"
  line-numbers-zero-style       = "#3b4261"
[init]
  defaultBranch = main
[advice]
  skippedCherryPicks = false
  detachedHead = false
[commit]
  gpgsign = true
[pull]
  rebase = true
[fetch]
  prune = true
[remote "origin"]
  tagopt = --tags

[diff "jupyternotebook"]
  command = git-nbdiffdriver diff --sources
[merge "jupyternotebook"]
  driver = git-nbmergedriver merge %O %A %B %L %P
  name = jupyter notebook merge driver
