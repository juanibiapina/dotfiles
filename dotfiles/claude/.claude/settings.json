{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "7200000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(dev tmux-context:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(git add:*)",
      "Bash(hostname)",
      "Bash(ls:*)",
      "Bash(rg:*)"
    ]
  },
  "alwaysThinkingEnabled": true
}
